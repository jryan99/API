# List accounts for customer 1
curl "http://localhost:3000/accounts?customerId=1"

# Get account details
curl "http://localhost:3000/accounts/1"

# Get transactions for account 1
curl "http://localhost:3000/accounts/1/transactions"

# Get contacts for account 1
curl "http://localhost:3000/accounts/1/contact"

# Get payment networks for account 1
curl "http://localhost:3000/accounts/1/payment-networks"

